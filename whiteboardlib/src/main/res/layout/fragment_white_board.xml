<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF">

    <FrameLayout
        android:id="@+id/controlLayout"
        android:visibility="visible"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/azure"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/control_btn_padding"
            android:paddingRight="@dimen/control_btn_padding">


            <ImageView
                android:id="@+id/btn_empty"
                style="@style/control_btn"
                android:src="@drawable/s_db_ct_ic_dl" />

            <ImageView
                android:id="@+id/btn_drag"
                style="@style/control_btn"
                android:src="@drawable/s_db_ct_ic_ct" />

            <ImageView
                android:id="@+id/btn_undo"
                style="@style/control_btn"
                android:src="@drawable/s_db_ct_ic_bk" />
            <ImageView
                android:id="@+id/btn_redo"
                style="@style/control_btn"
                android:src="@drawable/s_db_ct_ic_fw" />


            <ImageView
                android:id="@+id/btn_stroke"
                style="@style/control_btn"
                android:src="@drawable/s_db_ct_ic_pe" />

            <ImageView
                android:id="@+id/btn_eraser"
                style="@style/control_btn"
                android:src="@drawable/s_db_ct_ic_es" />

            <ImageView
                android:id="@+id/btn_photo"
                style="@style/control_btn"
                android:src="@drawable/s_db_ct_ic_im" />

            <ImageView
                android:id="@+id/btn_background"
                style="@style/control_btn"
                android:src="@drawable/s_db_ct_ic_bg" />

            <ImageView
                android:id="@+id/btn_commit"
                style="@style/control_btn"
                android:src="@drawable/s_db_nv_ic_sv" />

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/controlLayout"
        android:background="#efeded">

        <include layout="@layout/include_draw_content_layout" />

        <FrameLayout
            android:id="@+id/fl_windows"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </FrameLayout>

</RelativeLayout>
